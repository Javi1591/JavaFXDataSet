{
  "name": "JavaFX Development",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17",
      "installMaven": "false",
      "installGradle": "false"
    }
  },

  "runArgs": [
    "--network=host",
    "-e", "DISPLAY=${env:DISPLAY}",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix:rw"
  ],

  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "QT_X11_NO_MITSHM": "1"
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y openjfx libopenjfx-java x11-apps",

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  },

  "forwardPorts": [],
  
  "remoteUser": "vscode"
}
